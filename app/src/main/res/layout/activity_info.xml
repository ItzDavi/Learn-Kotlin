<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity"
    android:background="@color/material_a2_blue">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_arrow_back_ios_24"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/info_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:textAlignment="center"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/memberone_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#25ffffff"
        app:cardCornerRadius="24dp"
        android:layout_marginTop="24dp"
        app:strokeColor="@color/white"
        android:elevation="8dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_textview">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/memberone_imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:srcCompat="@drawable/itzdavi"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/memberone_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Davide Molo"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memberone_imageview" />

            <TextView
                android:id="@+id/memberone_desc_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Mobile App and Gaming Developer"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memberone_name_textview" />

            <TextView
                android:id="@+id/memberone_insta_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/itzdavilink"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/memberone_desc_textview" />

            <TextView
                android:textColorLink="@color/white"
                android:id="@+id/memberone_github_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/itzdavigitlink"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/memberone_insta_textview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/membertwo_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#25ffffff"
        app:cardCornerRadius="24dp"
        android:layout_marginTop="24dp"
        app:strokeColor="@color/white"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memberone_cardview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/membertwo_imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="#FFA14A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:srcCompat="@drawable/svarion"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/membertwo_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Alessandro Scisci"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/membertwo_imageview" />

            <TextView
                android:id="@+id/membertwo_desc_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile App and Gaming Developer"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginVertical="24dp"
                android:fontFamily="@font/poppinsregular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/membertwo_name_textview" />

            <TextView
                android:textColorLink="@color/white"
                android:id="@+id/membertwo_insta_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/svarionlink"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsbold"
                app:layout_constraintTop_toBottomOf="@id/membertwo_desc_textview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:textColorLink="@color/white"
                android:id="@+id/membertwo_github_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/svariongitlink"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/membertwo_insta_textview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>